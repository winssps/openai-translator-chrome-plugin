{
  "manifest_version": 3,
  "name": "openai-滑词翻译",
  "description": "使用openai api 的滑词翻译工具",
  "version": "1.0.4",
  "permissions": ["storage"],
  "action": {
    "default_icon": "ladybug.png",
    "default_title": "滑词翻译",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://*.openai.com/"]
}
